<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ThemSuaNhanVienActivity">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:layout_marginTop="24dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edTenNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="18dp"
            android:textSize="18dp"
            android:background="@drawable/bogoc_ed_noi_dung"
            android:hint="Tên nhân viên"
            android:focusable="false">
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#EAEAEA"></View>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edSDTNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:textSize="18dp"
            android:background="@drawable/bogoc_ed_noi_dung"
            android:hint="Số điện thoại"
            android:focusable="false">
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#EAEAEA"></View>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="0dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:textSize="18dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:background="@drawable/bogoc_ed_noi_dung"
            android:hint="Tài khoản"
            android:focusable="false">
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#EAEAEA"></View>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/edMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:textSize="18dp"
            android:background="@drawable/bogoc_ed_noi_dung"
            android:hint="Mật khẩu"
            android:focusable="false">
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#EAEAEA"></View>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutVaiTro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Vai trò"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="18dp"
            android:textColor="@color/gray"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/tvVaiTro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18dp"
            android:textColor="@color/mauchu"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edXoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#ff00"
        android:textSize="18dp"
        android:text="Xóa"
        android:background="@drawable/bogoc_ed_noi_dung"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:focusable="false">

    </EditText>
</LinearLayout>